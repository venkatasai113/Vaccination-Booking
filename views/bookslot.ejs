        <div class="form-group">
            <label for="centre">Centre<span style="color: red">*</span></label>
            <select id="inputCentre" class="form-control" name="centre" required>
                <option><%=b%></option>
              <% a.forEach(function(ele){%>
                <option><%=ele.code%> - <%=ele.name%></option>
              <%})%>
            </select>
        </div>


        <button type="submit" class="btn btn-primary">Proceed to Book Slot</button>
      </form>
      </div>
      </div>

    
      


